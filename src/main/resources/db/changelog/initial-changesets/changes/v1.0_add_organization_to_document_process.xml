<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id=" v1.0_add_organization_to_document_process" author="Vasily-Chumachenko">

        <preConditions>
            <tableExists tableName="document_process"/>
        </preConditions>

        <comment>Add column org_id to document_process</comment>

        <addColumn tableName="document_process">
            <column name="org_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_document_process_organization"
                             referencedTableName="organizations"
                             referencedColumnNames="org_id"/>
            </column>
        </addColumn>

        <update tableName="document_process">
            <column name="org_id" value="1"/>
        </update>

        <rollback>
            <dropColumn tableName="document_process" columnName="org_id"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
