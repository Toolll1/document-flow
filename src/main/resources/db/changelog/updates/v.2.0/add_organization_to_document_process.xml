<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="add_organization_column_to_document_process" author="Vasily_Chumachenko">

        <preConditions>
            <tableExists tableName="document_process"/>
        </preConditions>

        <comment>Add column org_id to document_process</comment>
        <addColumn tableName="document_process">
            <column name="org_id" type="bigint"/>
        </addColumn>

        <comment>Update existing records with org_id</comment>
        <update tableName="document_process">
            <column name="org_id" value="2"/>
            <where>process_id = 1</where>
        </update>
        <update tableName="document_process">
            <column name="org_id" value="1"/>
            <where>process_id = 2</where>
        </update>

        <comment>Add not null constraint</comment>
        <addNotNullConstraint tableName="document_process" columnName="org_id"/>

        <comment>Add foreign key constraint to user_id</comment>
        <addForeignKeyConstraint baseTableName="document_process" baseColumnNames="org_id"
                                 constraintName="organization_process" referencedTableName="organizations"
                                 referencedColumnNames="org_id"/>

        <rollback>
            <dropColumn tableName="document_process" columnName="org_id"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
