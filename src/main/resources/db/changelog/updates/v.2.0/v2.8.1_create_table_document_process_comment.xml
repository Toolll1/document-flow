<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="v2.8.1_create_table_document_process_comment" author="Sveta_klimova">
        <preConditions onFail="MARK_RAN">
            <dbms type="postgresql"/>
            <sqlCheck expectedResult="${database.name}">SELECT current_database()</sqlCheck>
            <not>
                <tableExists tableName="document_process_comment"/>
            </not>
        </preConditions>
        <createTable tableName="document_process_comment">
            <column name="comment_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_document_process_comment_user"
                             referencedTableName="users"
                             referencedColumnNames="user_id"
                             deleteCascade="true"/>
            </column>
            <column name="comment_content" type="varchar(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="document_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_document_process_comment_documents"
                             referencedTableName="documents"
                             referencedColumnNames="document_id"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>