<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="add_user_id_to_organizations" author="Vasily_Chumachenko">
        <preConditions>
            <tableExists tableName="organizations"/>
        </preConditions>
        <addColumn tableName="organizations">
            <column name="user_id" type="bigint" defaultValueNumeric="1">
                <constraints nullable="false"
                             foreignKeyName="user_organization"
                             referencedTableName="users"
                             referencedColumnNames="user_id"/>
            </column>
        </addColumn>

        <comment>Update existing records with user_id</comment>
        <update tableName="organizations">
            <column name="user_id" value="1"/>
            <where>org_id = 1</where>
        </update>
        <update tableName="organizations">
            <column name="user_id" value="2"/>
            <where>org_id = 2</where>
        </update>

        <rollback>
            <dropColumn tableName="organizations" columnName="user_id"/>
        </rollback>

    </changeSet>
</databaseChangeLog>